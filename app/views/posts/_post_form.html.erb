<%= form_with(model: @post, local: true) do |f| %>
<%= f.label "記録日" %>
<%= f.date_field :recording_date %>
<%= f.label "体重" %>
<div class="form-integer">
<%= f.text_field :body_weight %>
<p>kg</p>
</div>
<%= f.label "体脂肪率" %>
<div class="form-integer">
<%= f.text_field :body_fat_percentage %>
<p>％</p>
</div>
<%= f.label "トレーニングメニュー" %>
<%= f.text_area :training_menu %>
<%= f.label "食事メニュー" %>
<%= f.text_area :meal_menu %>
<%= f.label "総摂取カロリー" %>
<div class="form-integer">
<%= f.text_field :total_calorie %>
<p>kcal</p>
</div>
<%= f.label "記録写真" %>
<%= f.file_field :post_image %>
<%= f.submit "投稿" %>
<% end %>