<div class="user-edit">
  <div class="container">
    <div class="background-white">
      <div class="user-edit-content">
    <div class="form-heading">ユーザー情報の編集</div>
    <div class="form users-form">
      <div class="form-body">
      <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_with(model: @user, local: true) do |f| %>
        <%= f.label "ユーザー名" %>
        <%= f.text_field :name %>
        <%= f.label "メールアドレス" %>
        <%= f.text_field :email %>
        <%= f.label "性別" %>
        <%= f.select :gender,  {"男性": 1, "女性": 2}, { include_blank: '選択してください'} %>
        <%= f.label "身長" %>
        <%= f.text_field :user_height %>
        <%= f.label "生年月日" %>
        <%= f.date_field :birthday %>
        <%= f.label "アイコン" %>
        <%= f.file_field :icon_image_name %>
        <%= f.label "紹介文" %>
        <%= f.text_area :description %>
        <%= f.submit "保存" %>
        <% end %>
      </div>
    </div>
  </div>
</div>