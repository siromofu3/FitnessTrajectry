<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">
      <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_tag("/users/create") do %>
        <p>ユーザー名</p>
        <input type="text" name="name" value="<%= params[:name] %>">
        <p>メールアドレス</p>
        <input type="text" name="email" value="<%= params[:email] %>">
        <p>パスワード</p>
        <input type="password" name="password" value="<%= params[:password] %>">
        <p>性別</p>
        <%= f.select(:gender, options_for_select(["男性", "女性"], selected: params[:gender]), {name="gender"}) %>
        <p>身長</p>
        <input type="text" name="height" value="<%= params[:height] %>">
        <p>生年月日</p>
        <input type="text" name="birthday" value="<%= params[:birthday] %>">
        <input type="submit" value="新規登録">
        <% end %>
      </div>
    </div>
  </div>
</div>